@* Pages/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RAMBHA_LP_Explorer</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Inter font + your site css -->
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RAMBHA_LP_Explorer.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark border-bottom mb-3"
             style="background: rgba(10,15,28,.65); backdrop-filter: blur(6px); border-color: rgba(255,255,255,.06)!important;">
            <div class="container-lg">
                <a class="navbar-brand fw-semibold" asp-area="" asp-page="/Index">
                    RAMBHA-LP Explorer
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div id="mainNav" class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>
                    <div class="d-none d-sm-block">
                        <span class="badge rounded-pill text-bg-dark border border-secondary-subtle">Beta</span>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-lg">
        <main role="main" class="pb-4">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted mt-5"
            style="background: rgba(10,15,28,.65); border-top: 1px solid rgba(255,255,255,.06);">
        <div class="container-lg py-3">
            &copy; 2025 - RAMBHA_LP_Explorer - <a asp-area="" asp-page="/Privacy" class="link-light text-decoration-underline">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>